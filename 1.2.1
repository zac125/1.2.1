from random import randrange
import turtle as trtl
#-----initialize turtle-----
bob = trtl.Turtle()

#-----game configuration----
bob.color("pink")
bob.shape("square")
bob.shapesize(1)
bob.penup()
bob.speed(0)
score_writer = trtl.Turtle()
#-----game functions--------
def new_place():
  x = randrange(-200, 200)
  y = randrange(-200, 200)
  bob.goto(x, y)

score = 0
def bob_clicked(x, y):
  new_place()
  print("+1 Point!")
  update_score_for_box(0, 0)

font_setup = ("Arial", 20, "normal")
def update_score_for_box(x,y):
  global score
  score += 1
  score_writer.clear()
  print(score_writer.write(score,font=font_setup))

